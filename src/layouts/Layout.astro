import '../styles/global.css'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>drxcu</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		<script type="module">
			(() => {
				const el = document.scrollingElement || document.documentElement;
				let isThrottled = false;
				const sections = Array.from(document.querySelectorAll('section'));
				const viewportH = window.innerHeight;
				window.addEventListener('wheel', (e) => {
					if (isThrottled) return;
					const pos = el.scrollTop;
					const dir = e.deltaY;
					const idx = sections.findIndex(s => pos >= s.offsetTop && pos < s.offsetTop + s.offsetHeight);
					if (idx < 0) return;
					const sec = sections[idx];
					if (dir > 0) {
						if (pos + viewportH < sec.offsetTop + sec.offsetHeight) return;
						const next = sections[idx + 1];
						if (next) {
							isThrottled = true;
							next.scrollIntoView({ behavior: 'smooth', block: 'start' });
							setTimeout(() => isThrottled = false, 600);
							e.preventDefault();
						}
					} else {
						if (pos > sec.offsetTop) return;
						const prev = sections[idx - 1];
						if (prev) {
							isThrottled = true;
							if (prev.offsetHeight > viewportH) {
								const y = prev.offsetTop + prev.offsetHeight - viewportH;
								window.scrollTo({ top: y, behavior: 'smooth' });
							} else {
								prev.scrollIntoView({ behavior: 'smooth', block: 'start' });
							}
							setTimeout(() => isThrottled = false, 600);
							e.preventDefault();
						}
					}
				}, { passive: false });
			})();
		</script>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
		overflow-y: auto;
		scroll-behavior: smooth;
		background-color: #0A0A0A;
		font-family: 'Geist Mono', monospace;
		focus:outline-none;
		focus:ring-2;
		focus:ring-orange-500;
	}
</style>
