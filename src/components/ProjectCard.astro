---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  link: string;
  technologies: string[];
}

const { title, description, imageUrl, link, technologies } = Astro.props;
---

<div class="w-full h-full flex flex-col bg-neutral-900 rounded-lg shadow-md overflow-hidden max-h-[60vh] sm:max-h-[500px]">
  <img src={imageUrl} alt={title} class="w-full max-h-52 sm:max-h-80 object-cover" />
  <div class="p-4 overflow-auto">
    <h3 class="text-4xl font-bold mb-4">{title}</h3>
    <p class="text-xl text-gray-300 mb-4">{description}</p>
    <div class="text-lg flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="bg-orange-500/25 text-white rounded-md py-1 px-3">
          {tech}
        </span>
      ))}
    </div>
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded inline-block focus:outline-none focus:ring-2 focus:ring-white"
    >
      Try it out
    </a>
  </div>
</div>
