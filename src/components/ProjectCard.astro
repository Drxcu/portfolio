---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  link: string;
  technologies: string[];
}

const { title, description, imageUrl, link, technologies } = Astro.props;
---

<div class="w-full h-full flex flex-col bg-neutral-900 rounded-lg shadow-md overflow-hidden">
  <!-- Image wrapper: full width on mobile, centered and narrower on desktop with gray padding -->
  <div class="w-full bg-neutral-900 flex items-center justify-center py-0 lg:py-4">
    <div class="w-full lg:w-1/2 aspect-[3/2]">
      <img 
        src={imageUrl} 
        alt={title} 
        class="w-full h-full object-cover rounded-none lg:rounded-lg"
      />
    </div>
  </div>

  <!-- Content area -->
  <div class="p-3 overflow-auto flex flex-col flex-grow gap-3">
    <!-- Title and description -->
    <div>
      <h3 class="text-base xs:text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold mb-2 md:mb-3">
        {title}
      </h3>
      <p class="text-xs xs:text-sm sm:text-base md:text-base lg:text-lg text-gray-300 mb-3 md:mb-4 leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Technologies - show all, wrap naturally -->
    <div class="flex flex-wrap gap-1.5 lg:gap-2 mb-3 md:mb-4">
      {technologies.map((tech) => (
        <span class="bg-orange-500/25 text-white rounded px-1.5 xs:px-2 lg:px-3 py-0.5 lg:py-1 text-xs xs:text-xs sm:text-sm lg:text-base whitespace-nowrap">
          {tech}
        </span>
      ))}
    </div>

    <!-- Button -->
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-1.5 px-3 xs:py-2 xs:px-3 sm:py-2 sm:px-4 lg:py-3 lg:px-6 rounded text-xs xs:text-sm sm:text-base lg:text-lg w-fit transition"
    >
      Try it out
    </a>
  </div>
</div>
