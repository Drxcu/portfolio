---
import x from '../assets/x.svg';
import github from '../assets/github.svg';
import instagram from '../assets/instagram.svg';
import linkedin from '../assets/linkedIn.svg';
---

<section
  id="contact"
  class="relative min-h-screen flex flex-col items-center justify-center overflow-auto bg-neutral-900 text-white"
>
  <div class="container mx-auto px-4 py-12 sm:py-16 md:py-20 w-full max-w-6xl">
    <h2 class="text-2xl xs:text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-8 sm:mb-12 md:mb-16 text-left underline decoration-orange-500">
      Contact Me
    </h2>

    <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 w-full">
      <!-- Contact Form -->
      <div class="w-full lg:w-1/2">
        <form id="contactForm" class="flex flex-col gap-4">
          <input
            type="text"
            id="subject"
            placeholder="Subject"
            required
            class="p-3 xs:p-4 text-sm xs:text-base rounded bg-neutral-800 text-white border border-neutral-700 focus:outline-none focus:ring-2 focus:ring-orange-500 transition"
          />

          <textarea
            id="message"
            placeholder="Your message..."
            rows="6"
            required
            class="p-3 xs:p-4 text-sm xs:text-base rounded bg-neutral-800 text-white border border-neutral-700 focus:outline-none focus:ring-2 focus:ring-orange-500 resize-none transition"
          ></textarea>

          <button
            type="submit"
            class="bg-orange-500 hover:bg-orange-700 py-2 xs:py-3 px-4 xs:px-6 text-sm xs:text-base rounded font-bold transition w-fit focus:outline-none focus:ring-2 focus:ring-white"
          >
            Submit
          </button>
        </form>
      </div>

      <!-- Other Means of Contact -->
      <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start justify-center gap-6 lg:gap-8">
        <p class="text-sm xs:text-base sm:text-lg md:text-xl text-center lg:text-left">Or reach out via social media:</p>
        <div class="flex gap-3 xs:gap-4 sm:gap-6 flex-wrap justify-center lg:justify-start">
          <a
            href="https://x.com/drxcu"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 xs:p-3 bg-white hover:bg-gray-200 rounded-full transition focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            <img src={x.src} alt="X (Twitter)" class="w-4 h-4 xs:w-5 xs:h-5 sm:w-6 sm:h-6" />
          </a>
          <a
            href="https://github.com/drxcu"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 xs:p-3 bg-white hover:bg-gray-200 rounded-full transition focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            <img src={github.src} alt="GitHub" class="w-4 h-4 xs:w-5 xs:h-5 sm:w-6 sm:h-6" />
          </a>
          <a
            href="https://instagram.com/drxcu"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 xs:p-3 bg-white hover:bg-gray-200 rounded-full transition focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            <img src={instagram.src} alt="Instagram" class="w-4 h-4 xs:w-5 xs:h-5 sm:w-6 sm:h-6" />
          </a>
          <a
            href="https://linkedin.com/in/vladprigoreanu"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 xs:p-3 bg-white hover:bg-gray-200 rounded-full transition focus:outline-none focus:ring-2 focus:ring-orange-500"
          >
            <img src={linkedin.src} alt="LinkedIn" class="w-4 h-4 xs:w-5 xs:h-5 sm:w-6 sm:h-6" />
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const contactForm = document.getElementById("contactForm") as HTMLFormElement;
    contactForm?.addEventListener("submit", (event) => {
      event.preventDefault();

      const subject = (document.getElementById("subject") as HTMLInputElement)?.value;
      const message = (document.getElementById("message") as HTMLTextAreaElement)?.value;

      const email = "vlad.prigoreanu@hotmail.com";

      const mailtoLink = `mailto:${email}?subject=${encodeURIComponent(
        subject
      )}&body=${encodeURIComponent(message)}`;

      window.location.href = mailtoLink;
    });
  </script>
</section>
